<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Question name</th>
      <th>Description</th>
      <th>Answer a</th>
      <th>Answer b</th>
      <th>Answer c</th>
      <th>Answer d</th>
      <th>Answer e</th>
      <th>Answer f</th>
      <th>Correct answer a</th>
      <th>Correct answer b</th>
      <th>Correct answer c</th>
      <th>Correct answer d</th>
      <th>Correct answer e</th>
      <th>Correct answer f</th>
      <th>Explanation</th>
      <th>Tip</th>
      <th>Category</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question_id %></td>
        <td><%= question.question_name %></td>
        <td><%= question.description %></td>
        <td><%= question.answer_a %></td>
        <td><%= question.answer_b %></td>
        <td><%= question.answer_c %></td>
        <td><%= question.answer_d %></td>
        <td><%= question.answer_e %></td>
        <td><%= question.answer_f %></td>
        <td><%= question.correct_answer_a %></td>
        <td><%= question.correct_answer_b %></td>
        <td><%= question.correct_answer_c %></td>
        <td><%= question.correct_answer_d %></td>
        <td><%= question.correct_answer_e %></td>
        <td><%= question.correct_answer_f %></td>
        <td><%= question.explanation %></td>
        <td><%= question.tip %></td>
        <td><%= question.category %></td>
        <td><%= question.difficulty %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

